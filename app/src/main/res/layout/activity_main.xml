<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!--LADO A-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time_a" />

            <TextView
                android:id="@+id/pontuacao_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="84sp" />

            <Button
                android:id="@+id/tres_pontos_a"
                style="@style/BtnPontos"
                android:text="@string/tres_pontos" />
            <!--android:onClick="adicionaTresPontosA"-->

            <Button
                android:id="@+id/dois_pontos_a"
                style="@style/BtnPontos"
                android:text="@string/dois_pontos" />

            <Button
                android:id="@+id/tiro_livre_a"
                style="@style/BtnPontos"
                android:text="@string/tiro_livre" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <!--LADO B-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/time_b" />

            <TextView
                android:id="@+id/pontuacao_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="84sp" />

            <Button
                android:id="@+id/tres_pontos_b"
                style="@style/BtnPontos"
                android:text="@string/tres_pontos" />

            <Button
                android:id="@+id/dois_pontos_b"
                style="@style/BtnPontos"
                android:text="@string/dois_pontos" />

            <Button
                android:id="@+id/tiro_livre_b"
                style="@style/BtnPontos"
                android:text="@string/tiro_livre" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/reiniciar_partida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/reiniciar_partida"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</LinearLayout>